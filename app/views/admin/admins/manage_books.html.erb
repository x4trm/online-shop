<div>
  <h1 class="font-bold text-4xl">Manage Books</h1>
  <table class="min-w-full bg-white">
    <thead class="bg-gray-800 text-white">
      <tr>
        <th class="text-left py-3 px-4">ID</th>
        <th class="text-left py-3 px-4">Title</th>
        <th class="text-left py-3 px-4">Author</th>
        <th class="text-left py-3 px-4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="text-left py-3 px-4"><%= book.id %></td>
          <td class="text-left py-3 px-4"><%= book.title %></td>
          <td class="text-left py-3 px-4"><%= book.author.name %></td>
          <td class="text-left py-3 px-4">
            <%= link_to 'Edit', edit_admin_book_path(book), class: "text-blue-500" %> |
            <%= link_to 'Delete', admin_book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
