<div class="container mx-auto p-4">
  <h1 class="text-4xl font-bold mb-6">All Orders</h1>
  
  <table class="min-w-full bg-white">
    <thead>
      <tr>
        <th class="py-2">Order ID</th>
        <th class="py-2">Name</th>
        <th class="py-2">Email</th>
        <th class="py-2">Total Price</th>
        <th class="py-2">Actions</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @orders.each do |order| %>
        <tr>
          <td class="py-2"><%= order.id %></td>
          <td class="py-2"><%= order.name %></td>
          <td class="py-2"><%= order.email %></td>
          <td class="py-2"><%= number_to_currency(order.cart.total_price) %></td>
          <td class="py-2">
            <%= link_to 'View', admin_order_path(order), class: "bg-blue-500 text-white px-4 py-2 rounded-full hover:bg-blue-600" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
