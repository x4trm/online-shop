<div class="container mx-auto p-4">
  <h1 class="text-4xl font-bold mb-6">Order Details</h1>

  <div class="mb-4">
    <p class="text-xl font-semibold">Order ID: <%= @order.id %></p>
    <p class="text-xl font-semibold">Name: <%= @order.name %></p>
    <p class="text-xl font-semibold">Email: <%= @order.email %></p>
    <p class="text-xl font-semibold">Address: <%= @order.address %></p>
    <p class="text-xl font-semibold">Payment Type: <%= @order.pay_type %></p>
    <p class="text-xl font-semibold">Total Price: <%= @order.cart.total_price %></p>
  </div>

  <h2 class="text-3xl font-bold mb-4">Books in this Order</h2>
  <table class="min-w-full bg-white">
    <thead>
      <tr>
        <th class="py-2">Book</th>
        <th class="py-2">Price</th>
        <th class="py-2">Quantity</th>
        <th class="py-2">Total</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @order.cart.cart_items.each do |item| %>
        <tr>
          <td class="py-2"><%= item.book.name %></td>
          <td class="py-2"><%= number_to_currency(item.book.price) %></td>
          <td class="py-2"><%= item.quantity %></td>
          <td class="py-2"><%= number_to_currency(item.book.price * item.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
