<div class="flex flex-col min-h-screen p-4">
  <h1 class="text-2xl font-bold mb-4">Categories</h1>

  <div>
    <table class="min-w-full bg-white border border-gray-200">
      <thead>
      <tr class="bg-gray-200">
        <th class="py-2 px-4 border-b">Name</th>
        <th class="py-2 px-4 border-b">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr class="hover:bg-gray-100">
          <td class="py-2 px-4 border-b"><%= category.name %></td>
          <td class="py-2 px-4 border-b">
            <%= link_to 'Show', category_path(category.slug), class: 'text-blue-500 hover:text-blue-700 mr-2' %>
            <%= link_to 'Edit', edit_category_path(category.slug), class: 'text-yellow-500 hover:text-yellow-700 mr-2' %>
            <%= link_to 'Destroy', category_path(category.slug), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <%= link_to 'New Category', new_category_path, class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
