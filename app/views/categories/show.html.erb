<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-6"><%= @category.name %></h1>

  <p class="text-gray-600 mb-6">Books available in the <strong><%= @category.name %></strong> category:</p>

  <% if @category.books.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @category.books.each do |book| %>
        <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
          <%= link_to book_path(book.slug), class: "block text-gray-800" do %>
            <% if book.image.attached? %>
              <div class="mb-4">
                <%= image_tag book.image, class: "w-full h-auto rounded-lg" %>
              </div>
            <% end %>
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= book.name %></h2>
            <p class="text-gray-600 mb-2"><strong>Price:</strong> <%= number_to_currency(book.price) %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600 text-center">There are no books in this category.</p>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to 'Back to Categories', root_path, class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
