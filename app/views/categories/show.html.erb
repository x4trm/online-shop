<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @category.name %></h1>

  <p class="text-gray-600 mb-6">Books available in the <strong><%= @category.name %></strong> category:</p>

  <% if @category.books.any? %>
    <ul class="space-y-4">
      <% @category.books.each do |book| %>
        <li class="p-4 bg-gray-50 rounded-lg border border-gray-200">
          <%= link_to book_path(book.slug), class: "block text-gray-800" do %>
            <h2 class="text-xl font-semibold text-gray-800"><%= book.name %></h2>
            <p class="text-gray-600"><strong>Author(s):</strong> <%= book.authors.map(&:name).join(", ") %></p>
            <p class="text-gray-600"><strong>Page Count:</strong> <%= book.page_count %> pages</p>
            <p class="text-gray-600"><strong>Description:</strong> <%= book.description %></p>
            <p class="text-gray-600"><strong>Contents:</strong> <%= book.contents %></p>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">There are no books in this category.</p>
  <% end %>

  <div class="mt-6">
    <%= link_to 'Back to Categories', categories_path, class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
